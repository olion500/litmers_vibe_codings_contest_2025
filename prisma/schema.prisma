// Prisma schema for Jira Lite MVP auth foundation

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts Account[]
  sessions Session[]
  passwordResetTokens PasswordResetToken[]
  teamMembers TeamMember[]
  ownedTeams Team[] @relation("TeamOwner")
  sentInvites TeamInvite[] @relation("InviteSender")
  activities TeamActivity[] @relation("ActivityActor")
  projectFavorites ProjectFavorite[]
  createdIssues Issue[] @relation("IssueCreator")
  assignedIssues Issue[] @relation("IssueAssignee")
  issueHistories IssueHistory[] @relation("HistoryActor")
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
}

model Team {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  deletedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User   @relation("TeamOwner", fields: [ownerId], references: [id])
  members TeamMember[]
  invites TeamInvite[]
  activities TeamActivity[]
  projects Project[]

  @@index([ownerId])
}

model Project {
  id          String   @id @default(cuid())
  teamId      String
  name        String
  description String? @db.Text
  archivedAt  DateTime?
  deletedAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  team       Team              @relation(fields: [teamId], references: [id], onDelete: Cascade)
  favorites  ProjectFavorite[]
  statuses   Status[]
  issues     Issue[]
  labels     ProjectLabel[]

  @@index([teamId])
}

model ProjectFavorite {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([userId])
}

enum IssuePriority {
  HIGH
  MEDIUM
  LOW
}

enum StatusKind {
  BACKLOG
  IN_PROGRESS
  DONE
  CUSTOM
}

model Status {
  id        String     @id @default(cuid())
  projectId String
  name      String
  color     String
  kind      StatusKind
  position  Int
  wipLimit  Int       @default(0) // 0 = unlimited
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues  Issue[]

  @@unique([projectId, name], map: "status_unique_name_per_project")
  @@index([projectId, position])
}

model Issue {
  id           String         @id @default(cuid())
  projectId    String
  statusId     String
  title        String
  description  String?        @db.Text
  priority     IssuePriority  @default(MEDIUM)
  dueDate      DateTime?
  assigneeId   String?
  ownerId      String
  statusOrder  Int            @default(0)
  deletedAt    DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  project  Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  status   Status    @relation(fields: [statusId], references: [id], onDelete: Cascade)
  assignee User?     @relation("IssueAssignee", fields: [assigneeId], references: [id])
  owner    User      @relation("IssueCreator", fields: [ownerId], references: [id])
  labels   IssueLabel[]
  subtasks Subtask[]
  histories IssueHistory[]

  @@index([projectId, deletedAt])
  @@index([statusId, statusOrder])
}

model ProjectLabel {
  id        String   @id @default(cuid())
  projectId String
  name      String
  color     String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues  IssueLabel[]

  @@unique([projectId, name], map: "label_unique_name_per_project")
  @@index([projectId])
}

model IssueLabel {
  id        String   @id @default(cuid())
  issueId   String
  labelId   String

  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  label ProjectLabel @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@unique([issueId, labelId])
  @@index([labelId])
}

model Subtask {
  id        String   @id @default(cuid())
  issueId   String
  title     String
  completed Boolean  @default(false)
  position  Int      @default(0)
  createdAt DateTime @default(now())

  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)

  @@index([issueId, position])
}

model IssueHistory {
  id        String   @id @default(cuid())
  issueId   String
  field     String
  oldValue  String?
  newValue  String?
  actorId   String
  createdAt DateTime @default(now())

  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  actor User  @relation("HistoryActor", fields: [actorId], references: [id], onDelete: Cascade)

  @@index([issueId, createdAt])
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      TeamRole @default(MEMBER)
  deletedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
}

model TeamInvite {
  id          String   @id @default(cuid())
  teamId      String
  email       String
  token       String   @unique
  expiresAt   DateTime
  acceptedAt  DateTime?
  createdById String
  createdAt   DateTime @default(now())

  team   Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  sender User @relation("InviteSender", fields: [createdById], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([email])
  @@unique([teamId, email])
}

model TeamActivity {
  id        String   @id @default(cuid())
  teamId    String
  actorId   String
  type      String
  message   String
  createdAt DateTime @default(now())

  team  Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  actor User @relation("ActivityActor", fields: [actorId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
